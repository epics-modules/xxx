#!/bin/csh
setenv EPICS_APP /home/oxygen/MOONEY/epics/synApps/support/xxx

set output = `perl $EPICS_APP/release.pl $EPICS_APP`
$output

setenv EPICS_DISPLAY_PATH $EPICS_APP/xxxApp/op/adl':'$AUTOSAVE/asApp/op/adl':'$CALC/calcApp/op/adl':'$CAMAC/camacApp/op/adl':'$CCD/ccdApp/op/adl':'$DAC128V/dac128VApp/op/adl':'$DXP/dxpApp/op/adl':'$IP/ipApp/op/adl':'$IP330/ip330App/op/adl':'$IPUNIDIG/ipUnidigApp/op/adl':'$LOVE/loveApp/op/adl':'$MCA/mcaApp/op/adl':'$MOTOR/motorApp/op/adl':'$OPTICS/opticsApp/op/adl':'$QUADEM/quadEMApp/op/adl':'$SSCAN/sscanApp/op/adl':'$STD/stdApp/op/adl':'$VME/vmeApp/op/adl':'$ASYN/medm

setenv BURT_INCLUDE "-I$EPICS_APP/xxxApp/op/burt -I$AUTOSAVE/asApp/op/burt -I$CALC/calcApp/op/burt -I$CAMAC/camacApp/op/burt -I$CCD/ccdApp/op/burt -I$DAC128V/dac128VApp/op/burt -I$DXP/dxpApp/op/burt -I$IP/ipApp/op/burt -I$IP330/ip330App/op/burt -I$IPUNIDIG/ipUnidigApp/op/burt -I$MCA/mcaApp/op/burt -I$MOTOR/motorApp/op/burt -I$OPTICS/opticsApp/op/burt -I$QUADEM/quadEMApp/op/burt -I$SSCAN/sscanApp/op/burt -I$STD/stdApp/op/burt -I$VME/vmeApp/op/burt"
if (! ${?MEDM_EXEC_LIST}) setenv MEDM_EXEC_LIST 'Probe;probe &P &'

#setenv EPICS_CA_ADDR_LIST "164.54.53.126"

# This should agree with the environment variable set by the ioc
# see 'putenv "EPICS_CA_MAX_ARRAY_BYTES=64008"' in iocBoot/ioc<target>/st.cmd
setenv EPICS_CA_MAX_ARRAY_BYTES 64008

cd $EPICS_APP/xxxApp/op/adl
medm xxx.adl&
